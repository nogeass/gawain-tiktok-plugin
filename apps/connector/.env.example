# TikTok Shop OAuth credentials (from Partner Center)
TIKTOK_APP_KEY=your_tiktok_app_key
TIKTOK_APP_SECRET=your_tiktok_app_secret

# OAuth callback URL (must match Partner Center setting)
CALLBACK_URL=http://localhost:3456/connect/tiktok/callback

# Frontend URL to redirect to after OAuth success
FRONTEND_URL=http://localhost:3000

# Token encryption key â€” 32 bytes as hex (64 hex chars)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TOKEN_ENCRYPTION_KEY=

# HMAC secret for OAuth state signing
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
STATE_SECRET=

# SQLite database path (default: ./data/connector.db)
# SQLITE_PATH=./data/connector.db

# Server port (default: 3456)
# PORT=3456

# State TTL in milliseconds (default: 600000 = 10 minutes)
# STATE_TTL_MS=600000

# Rate limiting (default: 60 requests per 60 seconds)
# RATE_LIMIT_MAX=60
# RATE_LIMIT_WINDOW_MS=60000
